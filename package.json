{
  "name": "starter-template",
  "description": "A modern boilerplate for static website development",
  "version": "0.0.2",
  "homepage": "https://miotelka.me",
  "author": {
    "name": "Marek Miotelka",
    "url": "https://miotelka.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/marmiot/starter-template.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://bitbucket.org/marmiot/starter-template"
  },
  "keywords": [
    "html5",
    "css3",
    "es6",
    "typescript",
    "bootstrap",
    "foundation",
    "frontend",
    "sass",
    "static",
    "boilerplate",
    "webpack"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.js",
    "start:dist": "cross-env NODE_ENV=production webpack-dev-server --config ./config/webpack.config.js && http-server ./dist -o",
    "build:dist": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "setup": "node ./config/site.setup.js",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:scripts": "./node_modules/.bin/eslint --ext .js --ext .jsx --ext .ts --ext .tsx \"src\"",
    "fix:html": "prettier \"src/**/*.html\" --write",
    "fix:styles": "stylelint \"src/**/*.scss\" --fix",
    "fix:scripts": "./node_modules/.bin/eslint --ext .js --ext .jsx --ext .ts --ext .tsx \"src\" --fix",
    "postinstall": "npm run setup",
    "lint-staged": "lint-staged",
    "deploy": "node ./config/site.deploy.js",
    "component": "node ./config/cli.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "autoprefixer": "^10.2.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-dir": "^1.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "del": "^6.0.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "extract-loader": "^5.1.0",
    "favicons-webpack-plugin": "^4.2.0",
    "file-loader": "^6.2.0",
    "ftp-deploy": "^2.4.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.5.1",
    "http-server": "^0.12.3",
    "husky": "^4.3.8",
    "image-webpack-loader": "^7.0.1",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.4",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss-loader": "^4.2.0",
    "postcss-sass": "^0.4.4",
    "postcss": "^8.2.4",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "purgecss-webpack-plugin": "^4.0.0",
    "robotstxt-webpack-plugin": "^7.0.0",
    "sass-loader": "^10.1.1",
    "sass-resources-loader": "^2.1.1",
    "sitemap-webpack-plugin": "^1.0.0",
    "style-loader": "^2.0.0",
    "stylelint": "13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "4.1.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.7.3",
    "webpackbar": "^4.0.0"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "figlet": "^1.5.0",
    "foundation-sites": "^6.6.3",
    "inquirer": "^7.3.3",
    "jquery": "^3.5.1",
    "motion-ui": "^2.0.3",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.1",
    "reset-css": "^5.0.1",
    "sanitize.css": "^12.0.1",
    "webpack-dev-server": "^3.11.2",
    "what-input": "^5.2.10"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.jsx": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.tsx": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "src/**/*.scss": [
      "npm run fix:styles"
    ]
  }
}
